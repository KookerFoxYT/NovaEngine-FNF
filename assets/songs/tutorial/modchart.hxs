function onBeatHit(beat:Int) {
    if (beat % 16 == 15 && beat > 16 && beat < 48) {
        bf.playAnim("hey", true);
        if(dad.curCharacter == "gf") {
            dad.playAnim("cheer", true);
            dad.specialAnim = true;
            dad.animTimer = 0.6;
        } else {
            gf.playAnim("cheer", true);
            gf.specialAnim = true;
            gf.animTimer = 0.6;
        }

        bf.specialAnim = true;
        bf.animTimer = 0.6;
    }
}